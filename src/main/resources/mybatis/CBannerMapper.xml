<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.std.user.dao.ICBannerDAO">
	<resultMap id="cBanner_DB_Result" type="cBanner">
		<result column="code" property="code" />
		<result column="name" property="name" />
		<result column="pic" property="pic" />
		<result column="location" property="location" />
		<result column="order_no" property="orderNo" />
		<result column="url" property="url" />
		<result column="status" property="status" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
		<result column="company_code" property="companyCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="name != null and name != '' ">
				AND t.name like "%"#{name}"%"
			</if>
			<if test="location != null and location != '' ">
				AND t.location = #{location}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="updater != null and updater != '' ">
				AND t.updater = #{updater}
			</if>
			<if test="companyCode != null and companyCode != '' ">
				AND t.company_code = #{companyCode}
			</if>
		</trim>
	</sql>
	<select id="select_cBanner" parameterType="cBanner" resultMap="cBanner_DB_Result">
		SELECT
		t.code
		,t.name
		,t.pic
		,t.location
		,t.order_no
		,t.url
		,t.status
		,t.updater
		,t.update_datetime
		,t.remark
		,t.company_code
		FROM
		tstd_cbanner t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_cBanner_count" parameterType="cBanner"
		resultType="java.lang.Long">
		SELECT count(1) FROM tstd_cbanner t
		<include refid="where_condition" />
	</select>

	<insert id="insert_cBanner" parameterType="cBanner">
		INSERT INTO
		tstd_cbanner(
		code
		,name
		,pic
		,location
		,order_no
		,url
		,status
		,updater
		,update_datetime
		,remark
		,company_code
		)
		VALUES(
		#{code}
		,#{name}
		,#{pic}
		,#{location}
		,#{orderNo}
		,#{url}
		,#{status}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		,#{companyCode}
		)
	</insert>

	<update id="update_cBanner" parameterType="cBanner">
		UPDATE tstd_cbanner
		SET
		name = #{name}
		,pic = #{pic}
		,location = #{location}
		,order_no = #{orderNo}
		,url = #{url}
		,status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		,company_code = #{companyCode}
		WHERE code = #{code}
	</update>
	
	<delete id="delete_cBanner" parameterType="cBanner" >
		DELETE FROM
		tstd_cbanner
		WHERE
		code = #{code}
	</delete>

</mapper>